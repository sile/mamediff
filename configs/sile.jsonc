{
  "variables": {
    "HOME": {
      "type": "env",
    },
    "MAME_HIDE_LEGEND": {
      "type": "env",
      "default": false,
    },
    "STDERR_FILE": {
      "type": "const",
      "value": {
        "type": "file",
        "path": [{"ref": "HOME"}, "/.stderr"],
      },
    },
  },
  "setup": {
    "context": "@main",
    "action": {
      "type": "init-legend",
      "hide": {"ref": "MAME_HIDE_LEGEND"},
      "labels": {"show": "s(h)ow", "hide": "(h)ide"},
    },
  },
  "keybindings": {
    "@main": [
      {
        "label": "(q)uit",
        "keys": ["q", "C-c"],
        "action": {"type": "quit"},
      },
      {
        "label": "(r)ecenter",
        "keys": ["r", "C-l"],
        "action": {"type": "recenter"},
      },
      {
        "label": "(↑)",
        "keys": ["C-p", "<UP>"],
        "action": {"type": "move-up"},
      },
      {
        "label": "(↓)",
        "keys": ["C-n", "<DOWN>"],
        "action": {"type": "move-down"},
      },
      {
        "label": "(←)",
        "keys": ["C-b", "<LEFT>"],
        "action": {"type": "move-left"},
      },
      {
        "label": "(→)",
        "keys": ["C-f", "<RIGHT>"],
        "action": {"type": "move-right"},
      },
      {
        "label": "(t)oggle",
        "keys": ["t", "<TAB>"],
        "action": {"type": "toggle-expand"},
      },
      {
        "label": "(s)tage",
        "keys": ["s"],
        "action": {"type": "stage"},
      },
      {
        "label": "(D)iscard",
        "keys": ["D"],
        "action": {"type": "discard"},
      },
      {
        "label": "(u)nstage",
        "keys": ["u"],
        "action": {"type": "unstage"},
      },
      {
        "label": "(C)ommit",
        "keys": ["C"],
        "action": {
          "type": "execute-command",
          "command": "fish",
          "args": [
            "-c",
            [
              "git diff --cached",
              "| daberu",
              "  -s 'Generate only a conventional commit message from the git diff. ",
              "Output format: <type>: <description>. ",
              "Types: feat, fix, docs, style, refactor, test, chore. ",
              "Match recent commit style and language (use Japanese if recent commits used that). ",
              "Under 80 characters. ",
              "No explanations or commentary.'",
              "  -e 'git log --oneline -10'",
              "| git commit -F -",
            ],
          ],
          "stderr": {"ref": "STDERR_FILE"},
          "envs": {"DABERU_LOG_PATH": ""},
        },
      },
      {
        "label": "(P)ush",
        "keys": ["P"],
        "action": {
          "type": "execute-command",
          "command": "fish",
          "args": ["-c", "git push origin (git branch --show-current)"],
          "stderr": {"ref": "STDERR_FILE"},
        },
      },
      {
        "keys": ["h"],
        "action": {"type": "toggle-legend"},
      },
    ],
  },
}
