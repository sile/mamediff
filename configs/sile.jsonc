{
  "variables": {
    "MAME_HIDE_LEGEND": {
      "type": "env",
      "default": false,
    },
  },
  "setup": {
    "context": "@main",
    "action": {
      "type": "init-legend",
      "hide": {"ref": "MAME_HIDE_LEGEND"},
      "labels": {"show": "s(h)ow", "hide": "(h)ide"},
    },
  },
  "keybindings": {
    "@main": [
      {
        "label": "(q)uit",
        "keys": ["q", "C-c"],
        "action": {"type": "quit"},
      },
      {
        "label": "(r)ecenter",
        "keys": ["r", "C-l"],
        "action": {"type": "recenter"},
      },
      {
        "label": "(↑)",
        "keys": ["C-p", "<UP>"],
        "action": {"type": "move-up"},
      },
      {
        "label": "(↓)",
        "keys": ["C-n", "<DOWN>"],
        "action": {"type": "move-down"},
      },
      {
        "label": "(←)",
        "keys": ["C-b", "<LEFT>"],
        "action": {"type": "move-left"},
      },
      {
        "label": "(→)",
        "keys": ["C-f", "<RIGHT>"],
        "action": {"type": "move-right"},
      },
      {
        "label": "(t)oggle",
        "keys": ["t", "<TAB>"],
        "action": {"type": "toggle-expand"},
      },
      {
        "label": "(s)tage",
        "keys": ["s"],
        "action": {"type": "stage"},
      },
      {
        "label": "(D)iscard",
        "keys": ["D"],
        "action": {"type": "discard"},
      },
      {
        "label": "(u)nstage",
        "keys": ["u"],
        "action": {"type": "unstage"},
      },
      {
        "label": "(C)ommit",
        "keys": ["C"],
        "action": {
          "type": "execute-shell",
          "shell": "fish",
          "stderr": {"type": "file", "path": ".stderr", "skip-if-success": true},
          "script": [
            "git diff --cached",
            "| daberu",
            "  -s 'Analyze the git diff and generate a concise, conventional commit message. ",
            "Use the output format: <type>: <description>. ",
            "Types: feat, fix, docs, style, refactor, test, chore. ",
            "Match the language and style of recent commits. ",
            "Keep under 80 characters.'",
            "  -e 'git log --oneline -10'",
            "| git commit -F -",
          ],
          "envs": {"DABERU_LOG_PATH": ""},
        },
      },
      {
        "label": "(P)ush",
        "keys": ["P"],
        "action": {
          "type": "execute-shell",
          "shell": "fish",
          "stderr": {"type": "file", "path": ".stderr", "skip-if-success": true},
          "script": ["git push origin (git branch --show-current)"],
        },
      },
      {
        "keys": ["h"],
        "action": {"type": "toggle-legend"},
      },
    ],
  },
}
